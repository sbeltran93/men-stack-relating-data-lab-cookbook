<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
  </head>
  <body>
 <%- include('../partials/_navbar.ejs') %>

    <h1>Welcome to my Pantry</h1>

   <% foundPantry.forEach(item => { %>
    <li>
    <%= item.text %> 
   
    <form action="/users/:userId/foods/<%=item._id%>?_method=DELETE" method="POST">

    <button type="submit">Delete<%=item.text%></button>
    <p><a href="/users/<%= user._id %>/foods/<%= item._id %>/edit">Edit</a> </p>
</form>
    </li>
    <% }) %>

    <p><a href="/users/<%= user._id%>/foods/new">Add New Item!</a></p>

  </body>
</html>
